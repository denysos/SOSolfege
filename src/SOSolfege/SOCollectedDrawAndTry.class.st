"
just a data structure to hold a chord generated by an exercice and a try from the keyboard
"
Class {
	#name : #SOCollectedDrawAndTry,
	#superclass : #Object,
	#instVars : [
		'aDraw',
		'aTry'
	],
	#category : #'SOSolfege-core'
}

{ #category : #accessing }
SOCollectedDrawAndTry >> aDraw [
	^ aDraw
]

{ #category : #accessing }
SOCollectedDrawAndTry >> aDraw: anObject [
	aDraw := anObject
]

{ #category : #accessing }
SOCollectedDrawAndTry >> aTry [
	^ aTry
]

{ #category : #accessing }
SOCollectedDrawAndTry >> aTry: anObject [
	aTry := anObject
]

{ #category : #initialization }
SOCollectedDrawAndTry >> initialize [
	super initialize.
	self aDraw: SONoteSet new.
	self aTry: SONoteSet new
]

{ #category : #'accessing-testing' }
SOCollectedDrawAndTry >> isADrawEmpty [
	^ aDraw isEmpty
]

{ #category : #testing }
SOCollectedDrawAndTry >> isATryEmpty [
	^ aTry isEmpty
]
